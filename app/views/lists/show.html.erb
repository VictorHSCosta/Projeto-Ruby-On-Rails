<style>
  :root {
    --primary-color: #5A8F7B;
    --secondary-color: #F2B880;
    --background-color: #FAF3DD;
    --text-color: #2A363B;
    --card-background: #FFFFFF;
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }

  #main {
    padding: 2rem;
  }

  h1 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  #open-modal-btn {
    background-color: var(--secondary-color);
    color: white;
    border: none;
    border-radius: 2rem;
    padding: 0.5rem 1.5rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-size: 1rem;
  }

  #open-modal-btn:hover {
    background-color: rgb(240, 176, 116);
  }

  /* Modal styles */
  #item-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }

  #item-modal div {
    background: var(--card-background);
    margin: 10% auto;
    padding: 20px;
    width: 90%;
    max-width: 500px;
    border-radius: 8px;
    position: relative;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  #close-modal-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--secondary-color);
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 50%;
    cursor: pointer;
  }

  /* Form inputs */
  #item-modal input[type="text"],
  #item-modal input[type="date"] {
    width: 100%;
    padding: 10px;
    margin: 5px 0;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
  }

  /* Items grid */
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    padding: 0;
    list-style: none;
  }

  li {
    background-color: var(--card-background);
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  li:hover {
    transform: translateY(-5px);
  }

  li strong {
    text-transform: uppercase;
    color: var(--primary-color);
    font-size: 1.1em;
    display: block;
    margin: 1rem;
  }

  li a {
    text-decoration: none;
    padding: 5px 10px;
    margin: 0 5px;
    border-radius: 3px;
  }

  li a:hover {
    opacity: 0.8;
  }

  .back-link {
    display: inline-block;
    margin-top: 2rem;
    color: var(--primary-color);
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  #buttons {
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
    margin-top: 10px;
  }

  #buttons > div > * {
    margin: 1rem 0.5rem;
    background-color: var(--secondary-color);
    color: #FFF;
    padding: 5px 10px;
    border-radius: 1rem;
  }

  h2 {
    color: #FFF;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    background-color: var(--primary-color);
    padding: 0.5rem;
    border-radius: 1rem;
    margin-top: 2rem;
  }

  .editbnt,
  .backbnt,
  .deletbtn,
  .editbnt > *,
  .backbnt > *,
  .deletbtn > * {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: var(--secondary-color);
    color: white;
    border: none;
    border-radius: 2rem;
    padding: 0.5rem 1.5rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-size: 1rem;
    margin-top: 20px;
    margin-right: 10px;
    text-decoration: none;
  }

  /* Responsiveness */
  @media (max-width: 768px) {
    body {
      font-size: 14px;
    }

    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1.2rem;
    }

    #item-modal div {
      width: 95%;
    }

    #buttons > div > * {
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
    }

    ul {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.2rem;
    }

    h2 {
      font-size: 1rem;
    }

    #buttons > div > * {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>

<section id="main">
  <h1><%= @list.name %></h1>

  <!-- Botão para abrir o modal -->
  <button id="open-modal-btn" style="margin-bottom: 10px;">
    Adicionar Novo Item
  </button>

  <!-- Modal -->
  <div id="item-modal" style="display: none;">
    <div >
      <h2>Adicionar Novo Item</h2>
      <!-- Botão para fechar o modal -->
      <button id="close-modal-btn" style="margin-bottom: 10px;">
        X
      </button>

      <!-- Formulário para adicionar um novo item -->
      <%= form_with(model: [@list, @list.items.new], local: true) do |form| %>
        <div>
          <%= form.label :name, "Nome da Tarefa" %>
          <%= form.text_field :name, required: true %>
        </div>
        <div>
          <%= form.label :due_date, "Data de Entrega" %>
          <%= form.date_field :due_date %>
        </div>
        <div>
          <%= form.label :completed, "Já foi feito?" %>
          <%= form.check_box :completed %>
        </div>
        <div style="margin-top: 10px;">
          <%= form.submit "Adicionar Item", style: "background-color: #4CAF50; color: white; border: none; padding: 10px; cursor: pointer; border-radius: 5px;" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exibir os itens -->
  <h2>Itens da Lista</h2>
  <% if @list.items.any? %>
    <ul>
      <% @list.items.each do |item| %>
        <% next if item.id.nil? %> 
        <li>
          <strong><%= item.name %></strong>
          <% if item.due_date %>
              <span style="margin:1.2rem ; display:inline; font-size:1rem;">Entregar até:</span><p style="display:inline;font-size:1.2rem;"> <%= item.due_date.strftime('%d/%m/%Y')%></p>
          <% end %>
          <% if item.completed %>
            <span style="color: green;">✔ Feito</span>
          <% else %>
            <span style="display:block; color: red; margin:1rem 1rem;">❌ Não Feito</span>
          <% end %>
           <div id="buttons">
            <div>
              <%= link_to "Excluir", list_item_path(@list, item), method: :delete, data: { confirm: "Tem certeza?" } if item.id.present? %>
            </div>
            <div> 
              <%= link_to "Editar", edit_list_item_path(@list, item) if item.id.present? %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>Sem itens na lista. Adicione o primeiro item usando o botão acima!</p>
  <% end %>

  <!-- Link para voltar -->
  <div style="display: flex; justify-content: start;">
      <%= link_to "Voltar para as Listas", lists_path, style: "margin-top: 20px; display: inline-block;",class:"backbnt" %>    
      <%= link_to "Editar Lista", edit_list_path(@list) ,class:"editbnt"%>
      <%= button_to "Deletar Lista", list_path(@list), method: :delete, class: "deletbtn", 
      form: { style: "margin-bottom: 10px;" },
      data: { turbo_confirm: "Tem certeza?" } %>
  </div>
</section>

