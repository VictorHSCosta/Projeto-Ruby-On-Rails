<section class="flex flex-col md:p-16 p-4">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Listas de Tarefas" %>

  
  <h1 class="md:text-4xl text-primary text-center text-2xl mt-10">Listas de Tarefas</h1>

  <div class="text-primary  p-4 rounded-3xl mt-8 flex justify-between border-b-2  bg-white align-middle">
    <h2 class="md:text-2xl md:px-8 md:pt-2">Suas lista</h2>
    <%= link_to "Adicionar", new_list_path, class: "bg-secondary text-white rounded-full py-2 px-6 hover:bg-orange-400 hover:translate-y-[-2px] transition ease-in-out duration-300 text-[10px] md:text-xl" %>
  </div>

  <section class="grid gap-8 py-8 md:px-0  grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @lists.each do |list| %>
      <article class="list-card bg-card rounded-lg shadow-md overflow-hidden flex flex-col transition-transform duration-300 ease-in-out hover:translate-y-[-5px] hover:shadow-lg">
        <div class="flex justify-center bg-primary text-white text-center py-2 ">
          <%= image_tag "lista.png", alt: "Meu Logo", class: "w-20  h-auto" %>
        </div>
        <div class="list-content p-4 flex-grow">
          <%= render list %>
        </div>
        <%= link_to "Exibir a lista", list, class: "list-link bg-secondary text-white text-center py-2 no-underline font-bold transition ease-in-out duration-300 hover:bg-pink-300" %>
      </article>
    <% end %>
  </section>
      <% if @lists.empty? %>
        <p class="text-center text-gray-500 mt-8 i">Uau aqui parece vazio, adicione uma lista para preencher esse vazio.</p>
      <% end %>
</section>
