<style>
  :root {
    --primary-color: #5A8F7B; 
    --secondary-color: #F2B880; 
    --background-color: #FAF3DD;
    --text-color: #2A363B; 
    --card-background: #FFFFFF; 
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }

  #mainListas {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  #header {
    display: flex;
    margin: 0 2rem;
    justify-content: space-between;
    align-items: center;
    border-radius:1rem;
    padding:2rem 0;
  }

  h1 {
    color: var(--primary-color);
    font-size: 2rem;
    margin: 0;
  }

  #new-list {
    background-color: var(--secondary-color);
    color: white;
    border: none;
    border-radius: 2rem;
    padding: 0.5rem 1.5rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    font-size: 1rem;
  }

  #new-list:hover {
    background-color:rgb(240, 176, 116);
    transform: translateY(-2px);
  }

  #new-list > * {
    color: white;
    text-decoration: none;
    font-weight: bold;
  }

  #lists {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    padding: 2rem;
    justify-content: center;
  }

  .list-card {
    background-color: var(--card-background);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .list-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .list-image {
    background-color: var(--primary-color);
    color: white;
    font-size: 2rem;
    font-weight: bold;
    height: 120px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  }

  .list-image a {
    color: white;
    text-decoration: none;
  }

  .list-content {
    padding: 1rem;
    flex-grow: 1;
  }

  .list-link {
    background-color: var(--secondary-color);
    color: white;
    text-align: center;
    padding: 0.5rem;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .list-link:hover {
    background-color: #FFC3C5;
  }

  @media (max-width: 768px) {
    #lists {
      grid-template-columns: 1fr;
    }
  }
</style>

<main id="mainListas">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Listas de Tarefas" %>

  <header id="header">
    <h1>Listas de Tarefas</h1>
    <button id="new-list">
      <%= link_to "Adicionar", new_list_path %>
    </button>
  </header>

  <section id="lists">
    <% @lists.each do |list| %>
      <article class="list-card">
        <div class="list-image">
          <%= link_to list.name[0], list %>
        </div>
        <div class="list-content">
          <%= render list %>
        </div>
        <%= link_to "Exibir a lista", list, class: "list-link" %>
      </article>
    <% end %>
  </section>
</main>