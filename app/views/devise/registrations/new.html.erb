<div class="w-4/5 mx-auto p-8 bg-white rounded-2xl shadow-md mt-20 md:mt-20">
  <h2 class="text-3xl text-primary text-center mb-6 font-bold ">Registrar-se</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 " %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full p-4 rounded-lg border border-gray-300 text-base focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full p-4 rounded-lg border border-gray-300 text-base focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full p-4 rounded-lg border border-gray-300 text-base focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="text-center mt-6">
      <%= f.submit "Sign up", class: "bg-primary hover:bg-green-700 text-white font-medium py-2 px-6 rounded-lg transition duration-300 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-primary">
    <%= render "devise/shared/links" %>
  </div>
</div>
