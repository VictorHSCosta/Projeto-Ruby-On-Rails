<div class="w-4/5 mx-auto p-8 bg-white rounded-2xl shadow-md md:mt-32">
  <h2 class="text-3xl text-primary text-center mb-6 font-bold">Entrar</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "w-full p-4 border border-gray-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 mb-2" %><br />
      <%= f.password_field :password, autocomplete: "current-password",
          class: "w-full p-4 border border-gray-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", 
          class: "bg-teal-600 text-white px-6 py-3 rounded-lg cursor-pointer hover:bg-teal-700 transition-colors duration-300" %>
    </div>
  <% end %>

</div>
